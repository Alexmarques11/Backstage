FROM node:18-alpine

WORKDIR /app

COPY package*.json ./

RUN npm ci --only=production

COPY events/eventsServer.js ./
COPY events/eventsDb.js ./
COPY events/controllers ./events/controllers
COPY events/routes ./events/routes
COPY events/model ./events/model

EXPOSE 7000

CMD ["node", "events/eventsServer.js"]
